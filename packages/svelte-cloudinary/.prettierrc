{
	"singleQuote": true,
	"quoteProps": "as-needed",
	"trailingComma": "all",
	"bracketSpacing": true,
	"bracketSameLine": true,
	"arrowParens": "always",
	"semi": true,
	"useTabs": true,
	"tabWidth": 4,

	"svelteAllowShorthand": true,
	"svelteIndentScriptAndStyle": true,

	"plugins": ["prettier-plugin-svelte", "prettier-plugin-astro"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		},
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		}
	]
}
